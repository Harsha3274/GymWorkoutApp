<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".signup.SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- FrameLayout for Image and Centered Text -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Main Background Image -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/new_background"
                android:layout_gravity="center" />

            <!-- Overlay Frame Image -->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="60dp"
                android:src="@drawable/frame" />

            <!-- Registration Text -->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="150dp"
                android:fontFamily="@font/manrope_medium"
                android:text="Register on CORE"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <!-- Tagline Text -->
            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="210dp"
                android:fontFamily="@font/manrope_regular"
                android:text="Let's start your fitness journey"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/signupProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:indeterminateTint="@color/green"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="30dp">

            <!-- Username -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/manrope_regular"
                android:text="Username"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/usernameETSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_selector"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawableStart="@drawable/person"
                android:drawablePadding="10dp"
                android:fontFamily="@font/manrope_medium"
                android:hint="Username"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/lightWhite"
                android:textSize="12sp" />

            <!-- Age -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/manrope_regular"
                android:text="Age"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ageETSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_selector"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawableStart="@drawable/age"
                android:drawablePadding="10dp"
                android:fontFamily="@font/manrope_medium"
                android:hint="Age"
                android:inputType="numberSigned"
                android:textColor="@color/white"
                android:textColorHint="@color/lightWhite"
                android:textSize="12sp" />

            <!-- Gender -->
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/manrope_regular"
                android:text="Gender"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/genderETSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_selector"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawableStart="@drawable/gender"
                android:drawablePadding="10dp"
                android:fontFamily="@font/manrope_medium"
                android:hint="Gender"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/lightWhite"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/manrope_regular"
                android:text="Apartment Name"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/apartmentNameETSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_selector"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawableStart="@drawable/apartment"
                android:drawablePadding="10dp"
                android:fontFamily="@font/manrope_medium"
                android:hint="Apartment Name"
                android:inputType="text"
                android:textColor="@color/white"
                android:textColorHint="@color/lightWhite"
                android:textSize="12sp" />

            <!-- Flat Number -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/manrope_regular"
                android:text="Flat Number"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/flatNumberETSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_selector"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawableStart="@drawable/flat"
                android:drawablePadding="10dp"
                android:fontFamily="@font/manrope_medium"
                android:hint="Flat Number"
                android:inputType="numberSigned"
                android:textColor="@color/white"
                android:textColorHint="@color/lightWhite"
                android:textSize="12sp" />

            <!-- Email Address -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/manrope_regular"
                android:text="Email Address"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/emailETSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_selector"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawableStart="@drawable/email"
                android:drawablePadding="10dp"
                android:fontFamily="@font/manrope_medium"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/white"
                android:textColorHint="@color/lightWhite"
                android:textSize="12sp" />

            <!-- Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/manrope_regular"
                android:text="Password"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/passwordETSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_selector"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawableStart="@drawable/lock"
                android:drawableEnd="@drawable/closed_eye"
                android:drawablePadding="10dp"
                android:fontFamily="@font/manrope_medium"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/lightWhite"
                android:textSize="12sp" />

            <!-- Confirm Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/manrope_regular"
                android:text="Confirm Password"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/ConfirmPasswordETSignup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_selector"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:drawableStart="@drawable/lock"
                android:drawableEnd="@drawable/closed_eye"
                android:drawablePadding="10dp"
                android:fontFamily="@font/manrope_medium"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:textColor="@color/white"
                android:textColorHint="@color/lightWhite"
                android:textSize="12sp" />

        </LinearLayout>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="30dp"
            android:text="Register ->"
            android:textColor="@color/black"
            android:backgroundTint="@color/green"
            android:textSize="14sp"
            android:fontFamily="@font/manrope_medium"/>

        <!-- Google and Apple Signup Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <!-- Google Signup -->
            <ImageView
                android:id="@+id/googleImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/google"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="60dp" />

            <!-- Apple Signup -->
            <ImageView
                android:id="@+id/appleImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/apple" />
        </LinearLayout>

        <!-- Already have an account section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/manrope_medium"
                android:text="Already have an account?"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/LoginText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/manrope_medium"
                android:text="Log In"
                android:textColor="@color/green"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
