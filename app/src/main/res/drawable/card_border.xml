<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when selected (light gold border) -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent inside -->
            <stroke android:width="2dp" android:color="@color/lightGold" /> <!-- Light Gold border -->
            <corners android:radius="8dp"/> <!-- Corner radius to match CardView -->
        </shape>
    </item>

    <!-- Default state (no border) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent inside -->
            <stroke android:width="2dp" android:color="@android:color/transparent" /> <!-- No border by default -->
            <corners android:radius="8dp"/> <!-- Corner radius to match CardView -->
        </shape>
    </item>
</selector>
