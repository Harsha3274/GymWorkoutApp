<!-- res/drawable/card_border.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected state with gold border -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/core_dark_grey"/> <!-- Inside grey background -->
            <stroke android:width="4dp" android:color="@color/Gold"/> <!-- Gold border when selected -->
            <corners android:radius="30dp"/> <!-- Matching the CardView's corner radius -->
        </shape>
    </item>

    <!-- Default state with light grey border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/core_dark_grey"/> <!-- Inside grey background -->
            <stroke android:width="4dp" android:color="@color/lightGrey"/> <!-- Light grey border when unselected -->
            <corners android:radius="30dp"/> <!-- Matching the CardView's corner radius -->
        </shape>
    </item>
</selector>
