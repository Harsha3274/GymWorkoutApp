<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background when the tab is selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/Gold" /> <!-- Gold background when selected -->
            <stroke android:width="2dp" android:color="@android:color/white" /> <!-- White border -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Background when the tab is not selected -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Transparent background -->
            <stroke android:width="2dp" android:color="@android:color/white" /> <!-- White border -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</selector>
